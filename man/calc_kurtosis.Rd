## The function is currently defined as
function (image) 
{
    scale <- 1/prod(dim(image))
    mu <- mean(image)
    sigma <- sd(image)
    function_val <- vapply(image, function(x) ((x - mu)/sigma)^4, 
        FUN.VALUE = 1)
    return(scale * sum(function_val) - 3)
  }
}
